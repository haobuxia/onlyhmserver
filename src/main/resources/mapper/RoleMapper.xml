<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tianyi.helmet.server.dao.power.RoleDao">

    <resultMap id="BaseResultMap" type="com.tianyi.helmet.server.entity.power.Role">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="roleName" property="roleName" jdbcType="VARCHAR" />
        <result column="companyId" property="companyId" jdbcType="INTEGER" />
        <result column="universalId" property="universalId" jdbcType="INTEGER" />
    </resultMap>

    <sql id="Base_Column_List">
        id,createTime,roleName,companyId,universalId
    </sql>
    <sql id="Base_Column_List_NoId">
        createTime,roleName,companyId,universalId
    </sql>
    <sql id="conditions">
        <where>
            <if test="roleName != null and roleName != ''">
                and roleName = #{roleName,jdbcType=VARCHAR}
            </if>
            <if test="companyId != null">
                and companyId = #{companyId,jdbcType=INTEGER}
            </if>
            <if test="universalId != null">
                and universalId = #{universalId,jdbcType=INTEGER}
            </if>
        </where>
    </sql>

    <insert id="insert" parameterType="com.tianyi.helmet.server.entity.power.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_role (
          <include refid="Base_Column_List_NoId" />
        )
        VALUES (
          #{createTime},#{roleName},#{companyId},#{universalId}
        )
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE
        FROM t_role
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.tianyi.helmet.server.entity.power.Role">
        UPDATE t_role
        <set>
            <if test="roleName != null and roleName != ''">
                roleName = #{roleName,jdbcType=VARCHAR},
            </if>
            <if test="companyId != null">
                companyId = #{companyId,jdbcType=INTEGER},
            </if>
            <if test="universalId != null">
                universalId = #{universalId,jdbcType=INTEGER},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="listBy" parameterType="map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_role
        <include refid="conditions" />
        ORDER BY id DESC
        <include refid="core.page" />
    </select>

    <select id="countBy" parameterType="map" resultType="int">
        SELECT COUNT(id)
        FROM t_role
        <include refid="conditions" />
    </select>

    <select id="selectById" parameterType="int" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_role
        WHERE id = #{id}
    </select>

    <select id="listAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_role
        ORDER BY id
    </select>

</mapper>